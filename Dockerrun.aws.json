{
    "AWSEBDocerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "frontend",
            "image": "ibrahimsobhy/hadeeth-web",
            "hostname": "web",
            "essential": false,
            "memory": 128
        },
        {
            "name": "api",
            "image": "ibrahimsobhy/hadeeth-api",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "gateway",
            "image": "ibrahimsobhy/hadeeth-gateway",
            "hostname": "gateway",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["frontend", "api"]
        }
    ]
}